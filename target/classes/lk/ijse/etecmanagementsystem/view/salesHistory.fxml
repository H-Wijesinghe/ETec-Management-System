<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.etecmanagementsystem.controller.SalesHistoryController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="20.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Sales History" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;">
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                    <children>
                        <VBox spacing="2.0">
                            <children>
                                <Label text="From Date:" textFill="#555555">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="dpFromDate" promptText="Select Start Date" />
                            </children>
                        </VBox>

                        <VBox spacing="2.0">
                            <children>
                                <Label text="To Date:" textFill="#555555">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="dpToDate" promptText="Select End Date" />
                            </children>
                        </VBox>

                        <Button mnemonicParsing="false" onAction="#btnFilterOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #007ac6; -fx-cursor: hand;" text="Filter" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="18.0" />
                            </HBox.margin>
                        </Button>

                        <Button mnemonicParsing="false" onAction="#btnRefreshOnAction" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #7f8c8d; -fx-cursor: hand;" text="Refresh" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="18.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <TableView fx:id="tblSalesHistory" stylesheets="@../css/TableStyle.css" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSaleId" prefWidth="70.0" text="Sales ID" />
                        <TableColumn fx:id="colCustomer" prefWidth="150.0" text="Customer" />
                        <TableColumn fx:id="colUser" prefWidth="120.0" text="User" />
                        <TableColumn fx:id="colDesc" prefWidth="200.0" text="Description" />
                        <TableColumn fx:id="colSubTotal" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Sub Total" />
                        <TableColumn fx:id="colDiscount" prefWidth="80.0" style="-fx-alignment: CENTER-RIGHT;" text="Discount" />
                        <TableColumn fx:id="colGrandTotal" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Grand Total" />
                        <TableColumn fx:id="colPaid" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Paid" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
